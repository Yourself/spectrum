<Window x:Class="Spectrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spectrum"
        mc:Ignorable="d"
        Title="WinHue" Height="297.547" Width="374" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="devices" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Go" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="44" Click="button_Click" Height="22"/>
        <Slider x:Name="dropQuietS" Value="0.025" HorizontalAlignment="Left" Margin="100,75,0,0" VerticalAlignment="Top" Height="20" Width="200" RenderTransformOrigin="0.5,0.5" Maximum="0.1" LargeChange="0.01" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" IsEnabled="False" SmallChange="0.001"/>
        <Slider x:Name="dropChangeS" Value=".075" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Height="20" Width="200" RenderTransformOrigin="0.5,0.5" Maximum="0.1" LargeChange="0.01" SmallChange="0.001" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" IsEnabled="False"/>
        <Slider x:Name="kickQuietS" Value="1" HorizontalAlignment="Left" Margin="100,125,0,0" VerticalAlignment="Top" Height="20" Width="200" RenderTransformOrigin="0.5,0.5" Maximum="1" LargeChange="0.1" SmallChange="0.01" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" IsEnabled="False"/>
        <Slider x:Name="kickChangeS" Value="0" HorizontalAlignment="Left" Margin="100,150,0,0" VerticalAlignment="Top" Height="20" Width="200" RenderTransformOrigin="0.5,0.5" Maximum="4" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" IsEnabled="False" LargeChange="0.1" SmallChange="0.01"/>
        <Slider x:Name="snareQuietS" Value="1" HorizontalAlignment="Left" Margin="100,175,0,0" VerticalAlignment="Top" Height="20" Width="200" RenderTransformOrigin="0.5,0.5" Maximum="1" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" IsEnabled="False" LargeChange="0.1" SmallChange="0.01"/>
        <Slider x:Name="snareChangeS" Value=".5" HorizontalAlignment="Left" Margin="100,200,0,0" VerticalAlignment="Top" Height="20" Width="200" RenderTransformOrigin="0.5,0.5" Maximum="4" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" IsEnabled="False" LargeChange="0.1" SmallChange="0"/>
        <Label x:Name="dropQuietL" Content="0.025" HorizontalAlignment="Left" Margin="305,69,0,0" VerticalAlignment="Top"/>
        <Label x:Name="dropChangeL" Content="0.075" HorizontalAlignment="Left" Margin="305,94,0,0" VerticalAlignment="Top"/>
        <Label x:Name="kickQuietL" Content="1.000" HorizontalAlignment="Left" Margin="305,119,0,0" VerticalAlignment="Top"/>
        <Label x:Name="kickChangeL" Content="0.000" HorizontalAlignment="Left" Margin="305,144,0,0" VerticalAlignment="Top"/>
        <Label x:Name="snareQuietL" Content="1.000" HorizontalAlignment="Left" Margin="305,169,0,0" VerticalAlignment="Top"/>
        <Label x:Name="snareChangeL" Content="0.500" HorizontalAlignment="Left" Margin="305,194,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Drop Quiet" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Drop Change" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Kick Quiet" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="Kick Change" HorizontalAlignment="Left" Margin="10,144,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label4" Content="Snare Quiet" HorizontalAlignment="Left" Margin="10,168,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label5" Content="Snare Change" HorizontalAlignment="Left" Margin="10,194,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox" Content="Light Control" Checked="HandleCheck" Unchecked="HandleUnchecked" HorizontalAlignment="Left" Margin="193,10,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Slider x:Name="peakChangeS" Value="0.8" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" Height="20" Width="200" RenderTransformOrigin="0.5,0.5" Maximum="2" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="Slider_DragCompleted" IsEnabled="False" SmallChange="0.01"/>
        <Label x:Name="peakChangeL" Content="0.800" HorizontalAlignment="Left" Margin="305,44,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label6" Content="Peak Detection" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.332,0.316"/>
    </Grid>
</Window>
